{% extends "layouts/loginRequiredApp" %}

{% block content %}

    <div id="app"></div>
    <script>
        {% if currentUser %}
            window.as9duas09usa = 1; {# alias for "authenticated" so that hackers don't recognize it easy :))) #}

            window.currentUser = {
                id: {{ currentUser.id }},
                name: {{ currentUser.fullName | json_encode() | raw }},
                email: {{ currentUser.email | json_encode() | raw }},
                isInspector: {{ currentUser.isInGroup('inspectors') ? 'true' : 'false' }},
                isNegotiator: {{ currentUser.isInGroup('negotiators') ? 'true' : 'false' }},
                isAdmin: {{ currentUser.admin ? 'true' : 'false' }},
                isSales: {{ currentUser.isInGroup('sales_consultants') ? 'true' : 'false' }},
                isSeller: {{ currentUser.isInGroup('sellers') ? 'true' : 'false' }},
            };
        {% endif %}
    </script>

{% endblock %}
