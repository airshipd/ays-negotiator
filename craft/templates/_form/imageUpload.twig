<h2>Vehicle Images</h2>
<div class="row image-upload" id="image-upload">
  <div class="col s12 m2">
    <div class="image-upload__trigger">
      <img id="upload-trigger" src="/images/camera.png" alt="">
    </div>
  </div>
  {% for i in 1..5 %}
  <div class="col s12 m2">
    <div class="image-upload__preview">
      <div class="image-wrapper">
        <img id="preview-image-{{ i }}" src="" alt="image-preview" class="visuallyhidden">
      </div>
    </div>
    <input type="file" class="image-upload__input visuallyhidden" id="image-upload-{{ i }}" data-inputnumber="{{ i }}" name="fields[vehicleImages][]" accept="image/*">
  </div>
  {% endfor %}
</div>
