<h2>Terms & Conditions </h2>

<div class="row">
  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'make') }}
  </div>

  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'year') }}
  </div>
</div>

<div class="row">
  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'model', 'Model', true, 1) }}
  </div>

  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'kilometres', 'Kilometres', true, 1) }}
  </div>
</div>

<div class="row">
  <div class="input-field col s12 customerNameWrapper">
    <input type="text" id="termsCustomerName" name="fields[customerName]" value="{{ entry.customerName }}" required>
  </div>
</div>

<div class="row">
  <div class="input-field col s12 customerAddressWrapper">
    <input type="text" id="termsCustomerAddress" name="fields[customerAddress]" value="{{ entry.customerAddress }}" required>
  </div>
</div>

<div class="row">
  <div class="input-field col s12">
    <p>hereby agree to sell my car to Car Buyers Australia Pty Ltd for the amount of:</p>
  </div>
</div>

<div class="row">
  <div class="input-field col s12 m5 agreedPriceWrapper">
    <input type="text" id="termsAgreedPrice" name="fields[agreedPrice]" value="{{ entry.agreedPrice }}" required>
  </div>
</div>

<div class="row terms__content">
  {{ settings.contractCopy }}
</div>

<div class="row">
  <div class="col s12 m6">
    <label for="signature">Customer Signature</label>
    <input type="hidden" id="customer-signature-string" name="fields[customerSignatureString]" value="{{ entry.customerSignatureString }}" >
    <div class="signature-display md-launch" data-target="customer">
      <img class="signature-image" id="customer-signature-image" src="{{ entry.customerSignatureString }}" alt="customer signature">
    </div>
  </div>
  <div class="col s12 m6">
    <label for="signature">AreYouSelling Rep (Witness) Signature</label>
    <input type="hidden" id="rep-signature-string" name="fields[repSignatureString]" value="{{ entry.repSignatureString }}">
    <div class="signature-display md-launch" data-target="rep">
      <img class="signature-image" id="rep-signature-image" src="{{ entry.repSignatureString }}" alt="rep signature">
    </div>
  </div>
</div>

<div class="row">
  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'model', 'Model', true, 2) }}
  </div>

  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'kilometres', 'Kilometres', true, 2) }}
  </div>
</div>

<div class="row">
  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'customerName', 'Customer Name (Please Print)', true, 3) }}
  </div>

  <div class="input-field col s12 m6">
    {{ _formMacros.textInput(entry, 'repName', 'AreYouSelling Rep (Witness) Name') }}
  </div>
</div>

<div class="row">
  <div class="input-field col s12 m7">
    {{ _formMacros.textInput(entry, 'pickupAddressAndContact', "Pickup Address & Contact (if different from above)", false) }}
  </div>

  <div class="input-field col s12 m5">
    {{ _formMacros.dateInput(entry, 'contractDate', 'Date') }}
  </div>
</div>

<div class="legal-footer">
  <span>Car Buyers Australia Pty Ltd.</span>
  <span>ABN: 46 159 545 758</span>
  <span>LMCT 11137</span>
</div>
