{#
 # Structure entry template
 # -------------------
 # A default template for structure sections to extend
 #}
{% set pageClass = 'form-page' %}
{% set pageTitle = 'Assessment' %}
{% extends "_layout" %}

{% block content %}

    <div class="row">

      <form method="post" accept-charset="UTF-8" class="form-assessment col s12">
        {{ getCsrfInput() }}

        <input type="hidden" name="action" value="entries/saveEntry">
        <input type="hidden" name="redirect" value="/offer/{{entry.id}}">
        <input type="hidden" name="sectionId" value="{{ entry.sectionId }}">
        <input type="hidden" name="entryId" value="{{ entry.id }}">
        <input type="hidden" name="enabled" value="1">

        <h3 class="form-heading">Vehicle Assessment Form</h1>

        <div class="row">

        {% include '_form/customerAndCar' %}

        {% include '_form/specificVehicleInfo' %}

        <div class="row row-submit">
          <div class="input-field col s12 m8">
            <input type="number" id="approximateExpenditure" name="fields[approximateExpenditure]" step="0.01" value="{{entry.approximateExpenditure}}" required>
            <label for="approximateExpenditure">Total Approximate Expenditure</label>
          </div>

          <div class="col s12 m4">
              <button type="submit" class="btn right btn-large waves-effect">Submit</button>
          </div>
        </div>

      </form>

    </div>

{% endblock %}
