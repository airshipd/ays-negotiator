{#
 # Structure entry template
 # -------------------
 # A default template for structure sections to extend
 #}

{% extends "_layout" %}

{% block content %}

    <h1>Vehicle Assessment Form</h1>

    <div class="row">

      <form method="post" class="col s12">

        <div class="row">

          <div class="input-field col s12 m8">
            <input type="text" name="year" value="">
            <label>Year</label>
          </div>

          <div class="input-field col s12 m2">
            <input type="text" name="make" value="">
            <label>Make</label>
          </div>

          <div class="input-field col s12 m2">
            <input type="text" name="model" value="">
            <label>Model</label>
          </div>

        </div>

        <div class="row">

          <div class="input-field col s12 m2">
            <input type="text" name="year" value="">
            <label>Year</label>
          </div>

          <div class="input-field col s12 m3">
            <input type="text" name="make" value="">
            <label>Make</label>
          </div>

          <div class="input-field col s12 m3">
            <input type="text" name="model" value="">
            <label>Model</label>
          </div>

          <div class="input-field col s12 m2">
            <input type="text" name="body" value="">
            <label>Body</label>
          </div>

          <div class="input-field col s12 m2">
            <input type="text" name="colour" value="">
            <label>Colour</label>
          </div>

        </div>


          <div class="col-lg-6">
            <label>Badge <input type="text" name="badge" value="">
              <label>Series <input type="text" name="series" value="">


                </div>

                <label>Engine Size <input type="text" name="engineSize" value=""></label>
                <label>Odometer <input type="text" name="odometer" value=""></label>
                <label> Seats
                  <select class="" name="seats">
                    {% for i in 1..10 %}
                    <<option value="{{i}}">{{i}}</option>
                    {% endfor %}
                  </select>
                  <label>

                    <label>Doors
                      <select class="" name="doors">
                        {% for i in 1..10 %}
                        <<option value="{{i}}">{{i}}</option>
                        {% endfor %}
                      </select>
                    </label>

                    <label>Registration Number <input type="text" name="registrationNumber" value=""></label>
                    <label>Expiration Date <input type="text" class="input-datePicker" name="expirationDate" value=""></label>
                    <label>Build Date <input type="text" class="input-datePicker" name="buildDate" value=""></label>
                    <label>Compare Date <input type="text" class="input-datePicker" name="compareDate" value=""></label>

                    <h4 class="title">Service Book</h4>
                    <label> Yes<input type="radio" name="serviceBook" value="0"></label>
                    <label> No <input type="radio" name="serviceBook" value="1"></label>


                    <input type="hidden" name="action" value="negotiator/inspections/saveInspection">

                    <input type="submit" class="btn btn-submit" value="Submit">

                  </form>
    </div>

{% endblock %}
