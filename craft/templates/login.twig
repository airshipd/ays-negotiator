
{% set pageClass = 'login' %}
{% extends "layouts/public" %}

{% block content %}

  <div class="valign-wrapper">

    <form method="post" accept-charset="UTF-8" class="valign">
      {{ getCsrfInput() }}

      <input type="hidden" name="action" value="users/login">

      <div class="center-align">
        <a href="{{ siteUrl }}">
          <img src="/images/logo.svg" alt="Are You Selling">
        </a>
      </div>

      <div class="login-container">
        <h3 class="form-header">Login</h3>

        <div class="input-field">
          <input type="text" name="loginName" id="loginName" value="{{ craft.session.rememberedUsername }}">
          <label for="loginName">Username</label>
        </div>

        <div class="input-field">
          <input type="password" id="password" name="password">
          <label for="password">Password</label>
        </div>

        {% if errorMessage is defined %}
        <p class="error"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> {{ errorMessage }}</p>
        {% endif %}

        <hr>

        <div class="row">
          <div class="col s12 m6">
            <a href="{{ url('forgotpassword') }}" class="text-login">Forget your password?</a>
          </div>

          <div class="col s12 m6 right-align">
            <input class="btn-flat waves-effect" type="submit" value="Login">
          </div>
        </div>
      </div>
    </form>
  </div>


{% endblock %}
