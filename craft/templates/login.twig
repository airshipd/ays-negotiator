
{% extends "_layout" %}

{% block content %}

  <form method="post" accept-charset="UTF-8">
    {{ getCsrfInput() }}

    <label><input type="text" name="loginName" value="{{ craft.session.rememberedUsername }}"></label>

    <label><input type="password" name="password"></label>

    <input class="btn btn-submit" type="submit" value="Login">

    <input type="hidden" name="action" value="users/login">
  </form>

  <p><a href="{{ url('forgotpassword') }}">Forget your password?</a></p>

{% endblock %}
