{% set entry = craft.entries.id( craft.request.getSegment(2) ).first() %}
{# TODO set seperate styles for finalization  #}
{% set pageClass = 'form-page' %}
{% set pageTitle = entry.year ~ ' ' ~ entry.make ~ ' ' ~ entry.model ~ ' Finalize' %}

{% extends "_layout" %}

{% block content %}
  <div class="row">

    <form method="post" accept-charset="UTF-8" class="form-finalize col s12">
      {{ getCsrfInput() }}

      <input type="hidden" name="action" value="entries/saveEntry">
      <input type="hidden" name="redirect" value="/">
      <input type="hidden" name="sectionId" value="{{ entry.sectionId }}">
      <input type="hidden" name="entryId" value="{{ entry.id }}">
      <input type="hidden" name="enabled" value="1">

      <h3 class="form-heading">Finalization Form</h1>

      {% include '_form/customerAndCar' %}

      <div class="row">
        <div class="col s12 m4">
          <label for="signature">Customer Signature</label>
          <input type="hidden" id="customer-signature-string" name="fields[customerSignatureString]" >
          <div class="signature-display" id="md-launch">
            <img class="signature-image" src="" alt="signature-image">
          </div>
        </div>
      </div>

      <div class="row row-submit">
        <div class="input-field col s12 m8">
          <input type="number" id="approximateExpenditure" name="fields[approximateExpenditure]" step="0.01" value="{{entry.approximateExpenditure}}" required>
          <label for="approximateExpenditure">Total Approximate Expenditure</label>
        </div>

        <div class="col s12 m4">
            <button type="submit" class="btn right btn-large waves-effect">Submit</button>
        </div>
      </div>

    </form>

  </div>

  {% include '_partials/signaturePad' %}

{% endblock %}
