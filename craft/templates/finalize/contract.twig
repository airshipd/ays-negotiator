{% set entry = craft.entries.id( craft.request.getSegment(2) ).first() %}

{% set pageClass = 'contract-page' %}
{% set pageTitle = entry.year ~ ' ' ~ entry.make ~ ' ' ~ entry.model ~ ' Contract' %}

{% extends "layouts/public" %}

{% import "_form/macros" as _formMacros %}

{% block content %}
<div class="display-wrapper form-styles">
  <section class="row terms visuallyhidden">
    {% include '_form/terms' %}
  </section>
  <section class="row">
    <div class="col s12">
      <a id="save-contract">
        <i class="material-icons">file_download</i>
        <span>Download Contract of Sale</span>
      </a>
    </div>
  </section>
</div>

{% endblock %}
