
{% extends "layouts/public" %}

{% block content %}

{% if errors is defined %}
  <ul class="errors">
      {% for error in errors %}
          <li>{{ error }}</li>
      {% endfor %}
  </ul>
{% endif %}

<form method="post" accept-charset="UTF-8">
    {{ getCsrfInput() }}
    <input type="hidden" name="action" value="users/forgotPassword">
    <input type="hidden" name="redirect" value="/">

    <p>Enter your email address and instructions to reset your password will be sent to your email address provided</p>

    <label for="loginName">Email address</label>
    <input id="loginName" type="text" name="loginName"
        value="{% if loginName is defined %}{{ loginName }}{% else %}{{ craft.session.rememberedUsername }}{% endif %}">

    <input type="submit" value="Submit">
</form>

{% endblock %}
