{% import "_includes/forms" as forms %}

{{ forms.textField({
	label: "Default Staff Email"|t,
	instructions: "Set the default email address that all staff notification emails will go to"|t,
	name: 'defaultStaffEmail',
	value: settings.defaultStaffEmail
}) }}

{{ forms.textField({
	label: "Staff Email Subject"|t,
	instructions: "Set the subject for staff notification emails"|t,
	name: 'staffEmailSubject',
	value: settings.staffEmailSubject
}) }}

{{ forms.textField({
	label: "Customer Email Subject"|t,
	instructions: "Set the subject for customer notification emails"|t,
	name: 'customerEmailSubject',
	value: settings.customerEmailSubject
}) }}

{{ forms.lightswitchField({
	label: "Send To Logged In User"|t,
	instructions: "Send staff notification email to the current logged in user"|t,
	name: 'sendToLoggedInUser',
	on: settings.sendToLoggedInUser
}) }}

{{ forms.lightswitchField({
	label: "Send To Inspection Creator"|t,
	instructions: "Send staff notification email to the creator of the inspection job"|t,
	name: 'sendToInspectionCreator',
	on: settings.sendToInspectionCreator
}) }}
